---
// ProductosSection.astro
---

<section id="products" class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
  <!-- Título simple -->
  <h2
    class="text-center text-3xl md:text-4xl font-semibold mb-12 text-[#1B365D]"
  >
    Productos
  </h2>

  <!-- Cuadrícula de productos -->
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 mb-10">
    <!-- Productos originales -->
    <div class="bg-white rounded-3xl shadow-lg p-6 flex flex-col items-center">
      <div class="w-full aspect-square mb-4">
        <img
          src="/prod-crystalin.webp"
          alt="CRYSTALIN"
          class="w-full h-full object-contain"
        />
      </div>
      <h3 class="text-lg font-medium text-center mb-2">CRYSTALIN</h3>
      <p class="text-xl font-semibold text-gray-900 mb-4">$19.95</p>
      <a
        href="https://www.crystalin.fit/"
        target="_blank"
        class="bg-[#91D2E3] text-white px-6 py-2 rounded-full hover:bg-[#7BC0D1] transition-colors inline-block text-center"
      >
        Ver producto
      </a>
    </div>

    <div class="bg-white rounded-3xl shadow-lg p-6 flex flex-col items-center">
      <div class="w-full aspect-square mb-4">
        <img
          src="/prod-fixinol.webp"
          alt="FIXINOL"
          class="w-full h-full object-contain"
        />
      </div>
      <h3 class="text-lg font-medium text-center mb-2">FIXINOL</h3>
      <div class="flex items-center gap-2 mb-4">
        <span class="text-gray-400 line-through">$30.00</span>
        <span class="text-xl font-semibold text-[#91D2E3]">$24.50</span>
      </div>
      <a
        href="https://www.fixinol.fit/"
        target="_blank"
        class="bg-[#91D2E3] text-white px-6 py-2 rounded-full hover:bg-[#7BC0D1] transition-colors inline-block text-center"
      >
        Ver producto
      </a>
    </div>

    <div class="bg-white rounded-3xl shadow-lg p-6 flex flex-col items-center">
      <div class="w-full aspect-square mb-4">
        <img
          src="/prod-lipoxin.webp"
          alt="LIPOXIN"
          class="w-full h-full object-contain"
        />
      </div>
      <h3 class="text-lg font-medium text-center mb-2">
        LIPOXIN
      </h3>
      <div class="flex items-center gap-2 mb-4">
        <span class="text-gray-400 line-through">$18.95</span>
        <span class="text-xl font-semibold text-[#91D2E3]">$16.95</span>
      </div>
      <a
        href="https://www.lipoxin.fit/"
        target="_blank"
        class="bg-[#91D2E3] text-white px-6 py-2 rounded-full hover:bg-[#7BC0D1] transition-colors inline-block text-center"
      >
        Ver producto
      </a>
    </div>

    <!-- Repite el patrón para los demás productos -->
    <div class="bg-white rounded-3xl shadow-lg p-6 flex flex-col items-center">
      <div class="w-full aspect-square mb-4">
        <img
          src="/prod-lifetone.webp"
          alt="LIFETONE"
          class="w-full h-full object-contain"
        />
      </div>
      <h3 class="text-lg font-medium text-center mb-2">
        LIFETONE
      </h3>
      <div class="flex items-center gap-2 mb-4">
        <span class="text-gray-400 line-through">$25.00</span>
        <span class="text-xl font-semibold text-[#91D2E3]">$22.50</span>
      </div>
      <a
        href="https://www.lifetone.fit/"
        target="_blank"
        class="bg-[#91D2E3] text-white px-6 py-2 rounded-full hover:bg-[#7BC0D1] transition-colors inline-block text-center"
      >
        Ver producto
      </a>
    </div>

    <div class="bg-white rounded-3xl shadow-lg p-6 flex flex-col items-center">
      <div class="w-full aspect-square mb-4">
        <img
          src="/prod-maxiflex.webp"
          alt="MAXIFLEX"
          class="w-full h-full object-contain"
        />
      </div>
      <h3 class="text-lg font-medium text-center mb-2">MAXIFLEX</h3>
      <div class="flex items-center gap-2 mb-4">
        <span class="text-gray-400 line-through">$35.00</span>
        <span class="text-xl font-semibold text-[#91D2E3]">$29.95</span>
      </div>
      <a
        href="https://www.maxiflex.fit/"
        target="_blank"
        class="bg-[#91D2E3] text-white px-6 py-2 rounded-full hover:bg-[#7BC0D1] transition-colors inline-block text-center"
      >
        Ver producto
      </a>
    </div>

    <div class="bg-white rounded-3xl shadow-lg p-6 flex flex-col items-center">
      <div class="w-full aspect-square mb-4">
        <img
          src="/prod-ultraven.webp"
          alt="ULTRAVEN"
          class="w-full h-full object-contain"
        />
      </div>
      <h3 class="text-lg font-medium text-center mb-2">ULTRAVEN</h3>
      <p class="text-xl font-semibold text-gray-900 mb-4">$27.50</p>
      <a
        href="https://www.ultraven.fit/"
        target="_blank"
        class="bg-[#91D2E3] text-white px-6 py-2 rounded-full hover:bg-[#7BC0D1] transition-colors inline-block text-center"
      >
        Ver producto
      </a>
    </div>

    <div class="bg-white rounded-3xl shadow-lg p-6 flex flex-col items-center">
      <div class="w-full aspect-square mb-4">
        <img
          src="/prod-andromax.webp"
          alt="ANDROMAX"
          class="w-full h-full object-contain"
        />
      </div>
      <h3 class="text-lg font-medium text-center mb-2">ANDROMAX</h3>
      <div class="flex items-center gap-2 mb-4">
        <span class="text-gray-400 line-through">$45.00</span>
        <span class="text-xl font-semibold text-[#91D2E3]">$38.95</span>
      </div>
      <a
        href="https://www.andromax.fit/"
        target="_blank"
        class="bg-[#91D2E3] text-white px-6 py-2 rounded-full hover:bg-[#7BC0D1] transition-colors inline-block text-center"
      >
        Ver producto
      </a>
    </div>
  </div>
  <!-- Beneficios de envío -->
  <div class="w-full bg-[#91D2E3] py-8 rounded-xl">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Envíos Gratuitos con mínimo de compra -->
      <div class="flex items-center justify-center gap-4">
        <div class="w-12 h-12 flex items-center justify-center">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-12 h-12 text-white"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 17a2 2 0 11-4 0 2 2 0 014 0zM19 17a2 2 0 11-4 0 2 2 0 014 0z"
            ></path>
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0"
            ></path>
          </svg>
        </div>
        <div class="text-white">
          <h3 class="text-lg font-semibold">ENVÍOS GRATUITOS</h3>
          <p class="text-sm">Compras superiores a $20</p>
        </div>
      </div>

      <!-- Envíos Gratuitos general -->
      <div class="flex items-center justify-center gap-4">
        <div class="w-12 h-12 flex items-center justify-center">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-12 h-12 text-white"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"
            ></path>
          </svg>
        </div>
        <div class="text-white">
          <h3 class="text-lg font-semibold">ENVÍOS GRATUITOS</h3>
        </div>
      </div>

      <!-- Envíos 24/48h -->
      <div class="flex items-center justify-center gap-4">
        <div class="w-12 h-12 flex items-center justify-center">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-12 h-12 text-white"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <div class="text-white">
          <h3 class="text-lg font-semibold">ENVÍOS 24/48H</h3>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  img {
    max-height: 250px;
    width: auto;
    margin: 0 auto;
  }
</style>
